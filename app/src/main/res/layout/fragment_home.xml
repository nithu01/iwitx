<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="5dp"
        android:visibility="visible"
        android:id="@+id/wallet_ledger5"
        android:text="Welcome Demo!"
        android:textSize="@dimen/SP25"
        android:textColor="@color/yellow" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/DP200"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_margin="@dimen/DP10"
            app:cardBackgroundColor="@color/colorAccentstart">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet Balance"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000" />

                <RelativeLayout
                    android:id="@+id/layout_first"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/DP10"
                    android:layout_below="@+id/layout_second">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wallet_progress_bar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/wallet_balance"
                        android:textSize="25dp"
                        android:textColor="@color/colorAccent" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="visible"
                    android:id="@+id/wallet_ledger"
                    android:text="Wallet Ledger"
                    android:textColor="#000000" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/DP200"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_margin="@dimen/DP10"
            app:cardBackgroundColor="@color/colorAccentstart">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet Balance"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000" />

                <RelativeLayout
                    android:id="@+id/layout_first1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/DP10"
                    android:layout_below="@+id/layout_second">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wallet_progress_bar2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/wallet_balance3"
                        android:textSize="25dp"
                        android:textColor="@color/colorAccent" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="visible"
                    android:id="@+id/wallet_ledger4"
                    android:text="Wallet Ledger"
                    android:textColor="#000000" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/DP200"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_margin="@dimen/DP10"
            app:cardBackgroundColor="@color/colorAccentstart">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet Balance"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000" />

                <RelativeLayout
                    android:id="@+id/layout_first3"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/DP10"
                    android:layout_below="@+id/layout_second">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wallet_progress_bar3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/wallet_balance5"
                        android:textSize="25dp"
                        android:textColor="@color/colorAccent" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="visible"
                    android:id="@+id/wallet_ledger3"
                    android:text="Wallet Ledger"
                    android:textColor="#000000" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_margin="@dimen/DP10"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/backgroundimage"
        android:layout_below="@+id/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/DP10"
        android:background="@drawable/background_layout"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/DP10"
        android:background="@drawable/gridview_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/DP10"
            android:layout_marginBottom="@dimen/DP10"
            android:textSize="@dimen/DP20"
            android:gravity="start"
            android:text="@string/services"/>

        <GridView
            android:layout_width="match_parent"
            android:id="@+id/gridview4"
            android:numColumns="4"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>