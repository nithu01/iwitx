<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="com.app.iwitx.viewmodel.AndroidViewModel" />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".ui.KYCActivity">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/name"
                        android:padding="@dimen/DP10"
                        android:background="@android:color/transparent"
                        android:text="@={data.name}"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/dob"
                        android:padding="@dimen/DP10"
                        android:background="@android:color/transparent"
                        android:text="@={data.dob}"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/gender"
                        android:padding="@dimen/DP10"
                        android:background="@android:color/transparent"
                        android:text="@={data.gender}"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/aadhar"
                        android:padding="@dimen/DP10"
                        android:background="@android:color/transparent"
                        android:text="@={data.aadhar}"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DP50"
                        android:background="@android:color/transparent"
                        android:hint="@string/pan"
                        android:padding="@dimen/DP10"
                        android:text="@={data.pan}" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DP50"
                        android:background="@android:color/transparent"
                        android:id="@+id/state"
                        android:padding="@dimen/DP10"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="match_parent"
                        android:padding="@dimen/DP10"
                        android:id="@+id/district"
                        android:background="@android:color/transparent"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/vill"
                        android:padding="@dimen/DP10"
                        android:background="@android:color/transparent"
                        android:text="@={data.vill}"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/address"
                        android:padding="@dimen/DP10"
                        android:background="@android:color/transparent"
                        android:text="@={data.aadress}"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DP40"
                app:cardCornerRadius="@dimen/DP10"
                android:elevation="@dimen/DP20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/pincode"
                        android:padding="@dimen/DP10"
                        android:inputType="number"
                        android:maxLength="5"
                        android:background="@android:color/transparent"
                        android:text="@={data.pincode}"
                        android:layout_height="@dimen/DP50"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:hint="@string/pincode"
                android:id="@+id/update"
                android:text="Button"
                android:padding="@dimen/DP10"
                android:layout_height="@dimen/DP50"/>


        </LinearLayout>
    </ScrollView>

</layout>
